<% layout("/layouts/boilerplate") -%>
<div class="row">
    <div class="col-8 offset-2 mt-3">
        <h3 style="font-weight: 900;">Create New Listing</h3>
        <br>
        <form action="/listing" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
            <div>
                <label for="title" class="form-label">Title</label>
                <input type="text" name="listing[title]" 
                placeholder="Enter Title name" id="title" class="form-control" required>
                <div class="valid-feedback">Looks good!</div><br>
            </div>
            <div>
                <label for="description" class="form-label">Description</label>
                <textarea type="text" name="listing[description]" placeholder="Write Description" id="description" class="form-control" required></textarea>
                      <div class="invalid-feedback">Please Write about place</div><br>
            </div>
            <div>
                <label for="image" class="form-label">Upload Image</label>
                <input type="file" name="listing[image]" id="image"  class="form-control" required>
                <div class="invalid-feedback">Please Give image</div><br>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label for="price" class="form-label" >Price</label>
                    <input type="number" name="listing[price]" id="price" class="form-control" placeholder="1200" required>
                    <div class="invalid-feedback">Please give reasonable price</div><br>
                </div>
                <div class="col-md-8">
                    <label for="country" class="form-label">country</label>
                    <input type="text" name="listing[country]" id="country" placeholder="Enter country" class="form-control" required>
                    <div class="invalid-feedback">Please Enter country name</div><br>
                </div>
            </div>
            <div>
                <label for="location" class="form-label">location</label>
                <input type="text" name="listing[location]" id="location" placeholder="Enter location" class="form-control" required>
                <div class="invalid-feedback">Please Enter valid location</div><br>
            </div>
            <button class="btn btn-dark add-btn">submit</button>
            <br><br>
        </form>
    </div>
</div>