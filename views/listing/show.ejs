<% layout('/layouts/boilerplate') -%>

<script>
    let mapToken = "<%= process.env.MAP_TOKEN%>"
    let listing = <%- JSON.stringify(oneListings) %>
</script>

<div class="row mt-3 mb-3">
    <div class="col col-8 offset-3 ">
        <b><%= oneListings.title%></b>
    </div>
    <div class="col col-6 offset-3 ">
        <div class="card listing-card">
            <img src="<%= oneListings.image.url%>" class="card-img-top show-img" alt="Listing image">
            <div class="card-body">
                <p class="card-text">
                    Owned By : <%= oneListings.owner.username%><br> <br>
                    <%= oneListings.description%><br>
                    <%= oneListings.price.toLocaleString('en-IN', {
                                                style: 'currency',
                                                currency: 'INR'
                                            })%> / night%><br>
                    <%= oneListings.location%><br>
                    <%= oneListings.country%><br>
                </p>
            </div>
        </div>
    </div>

    <% if(currUser && currUser._id.equals(oneListings.owner._id)) {%>
    <div class="btns">
        <a href="/listing/<%= oneListings._id%>/edit" class="btn btn-dark col-1 offset-3 add-btn">Edit</a>
        <form action="/listing/<%= oneListings._id%>?_method=DELETE" method="post">
            <button class="btn btn-dark offset-5">Delete</button>
        </form>
    </div>
    <%}%>

    <div class="col-8 offset-3">
        <% if(currUser) {%>
            <hr>
        <h3>Leave a comment</h3>
        <form action="/listing/<%= oneListings._id%>/review" method="post" novalidate class="needs-validation">
            <div class="mb-3 mt-3">
                <label for="rating" class="form-label"></label>Rating</label>
                <fieldset class="starability-slot">
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating" />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
            </div>
            <div class="mb-3 mt-3">
                <label for="comment" class="form-label">comment</label>
                <textarea name="review[comment]" id="comment" class="form-control" rows="5" cols="30" required></textarea>
                <div class="invalid-feedback">Please write some comment</div><br>
            </div>
            <div class="mb-3 mt-3">
                <button class="btn btn-outline-dark">submit</button>
            </div>
        </form>
        <%}%>
        <%if(oneListings.reviews.length > 0) {%>
        <p><b>All Reviews</b></p>
        <div class="row">
            <% for (let review of oneListings.reviews) { %>
            <div class="card col-5 ms-3 mb-3" >
                <div class="card-body">
                    <h5 class="card-title">@<%= review.author.username%></h5>
                    <p class="starability-result card-text" data-rating="<%= review.rating%>"></p>
                    <p class="card-text"><%= review.comment%></p> <br>
                    <%if(currUser && currUser._id.equals(review.author._id)) {%>
                    <form class="mb-3" action="/listing/<%= oneListings._id%>/review/<%= review._id%>?_method=DELETE" method="post">
                        <button class="btn btn-outline-dark">Delete</button>
                    </form>
                    <%}%>
                </div>
            </div>
            <% } %>
        </div>
        <%}%>
    </div>
    <div class="col col-6 offset-3 ">
        <h3>Where youâ€™ll be</h3>
        <div id="map"></div>
    </div>
</div>

<script src="/js/map.js"></script>